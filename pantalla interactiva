#include <Wire.h>
#include <LiquidCrystal_I2C.h>

#define BUTTON_PIN2 2
#define BUTTON_PIN3 3
#define BUTTON_PIN4 4

LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  pinMode(BUTTON_PIN2, INPUT_PULLUP);
  pinMode(BUTTON_PIN3, INPUT_PULLUP);
  pinMode(BUTTON_PIN4, INPUT_PULLUP);
  lcd.inicializar();
  lcd.backlight();
  lcd.setCursor(0, 0);
   lcd.print("Patio");
    lcd.setCursor(6, 0);
    lcd.print("Clase");
    lcd.setCursor(11, 0);
    lcd.print("Motor");
}
bucle vacío() {

  int estado2 = digitalRead(BUTTON_PIN2);
  lcd.setCursor(1, 1);
  si (estado2 == ALTO) {
    lcd.print("APAGADO");
  }
  demás{
    lcd.setCursor(1, 1);
    lcd.print("ENCENDIDO.");
}
int estado3 = digitalRead(BUTTON_PIN3);
  lcd.setCursor(7, 1);
  if (estado3 == HIGH) {
    lcd.print("APAGADO");
  }
  demás{
    lcd.setCursor(6, 1);
    lcd.print("ENCENDIDO.");
}
int estado4 = digitalRead(BUTTON_PIN4);
  lcd.setCursor(12, 1);
  si (estado4 == ALTO) {
    lcd.print("APAGADO");
  }
  demás{
    lcd.setCursor(12, 1);
    lcd.print("ENCENDIDO.");
}
}
